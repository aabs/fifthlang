<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <!-- Ensure Cobertura format so CI and Codecov can consume it -->
          <Format>cobertura</Format>
          <!-- Reduce noise in coverage -->
          <!-- The previous Exclude block used JSON-like syntax which the collector cannot parse.
               Use semicolon/newline separated patterns in the supported format: [assembly]type -->
          <Exclude>
            [tunit.*]*;
            [*.Tests]*;
            [*.Test]*
          </Exclude>
          <ExcludeByFile>**/bin/**,**/obj/**,**/*.g.cs,**/*.generated.cs</ExcludeByFile>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <UseSourceLink>true</UseSourceLink>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
